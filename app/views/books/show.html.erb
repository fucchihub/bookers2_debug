<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/follow', user: @user %>
      <h2 class="mt-3">New book</h2>

      <%= render 'form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
          <td><%= link_to(@books.user) do %>
            <%= image_tag @books.user.get_profile_image, size:"100x100" %><br>
            <%= @books.user.name %>
            <% end %>
          </td>
          <td><%= link_to @books.title, @books %></td>
          <td><%= @books.body %></td>
          <% if @books.user == current_user %>
            <td><%= link_to 'Edit', edit_book_path(@books), class: "btn btn-sm btn-success" %></td>
            <td><%= link_to 'Destroy', @books, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%></td>
          <% end %>
<!--いいね機能-->
          <% if @books.favorited_by?(current_user) %>
          <td>
            <%= link_to book_favorites_path(@books), method: :delete, class: "text-danger" do %>
              <i class="fa-solid fa-heart"></i><%= @books.favorites.count %>
            <% end %>
          </td>
          <% else %>
          <td>
            <%= link_to book_favorites_path(@books), method: :post do %>
              <i class="fa-regular fa-heart"></i><%= @books.favorites.count %>
            <% end %>
          </td>
          <% end %>
          <td><p>コメント数：<%= @books.book_comments.count %></p></td>
        </tr>
      </table>
<!--いいねの色を変えたい場合-->
<!--class: "text-danger"だとブートストラップの色で指定できる-->
<!--style: "color: red;"だといろんな色を指定できる-->
<!--コメント機能-->
      <div>
        <p><% @books.book_comments.each do |book_comment| %></p>
          <%= image_tag book_comment.user.get_profile_image, size:'50x50' %>
          <%= book_comment.comment %>
          <% if book_comment.user == current_user %>
            <%= link_to "Destroy", book_book_comment_path(book_comment.book, book_comment),
            method: :delete, class: "btn btn-sm btn-danger" %>
          <% end %>
        <% end %>
      </div>
      <%= form_with model: [@books, @book_comment] do |f| %>
        <p><%= f.text_area :comment, rows: '2', placeholder: "コメントをここに" %></p>
        <p><%= f.submit %></p>
      <% end %>
    </div>
  </div>
</div>